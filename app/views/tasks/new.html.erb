<h1>New task</h1>

<%= error_messages_for :task %>

<% form_for(@task) do |f| %>
  <p>
		<%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
		<%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
		<%= f.label :views %><br />
    <%= f.text_field :views %>
  </p>
  <p>
		<%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
		<%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', tasks_path %>
