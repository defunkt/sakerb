<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Body</th>
    <th>Views</th>
    <th>Description</th>
    <th>User</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.name %></td>
    <td><%=h task.body %></td>
    <td><%=h task.views %></td>
    <td><%=h task.description %></td>
    <td><%=h task.user_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
